
    <main>
        <section id="details-info">
            <h1>Details</h1>
            <div class="coin-image">
                <img src="{{crypto.image}}">
            </div>

            <div class="coin-info">
                <div class="coin-text">
                    <h1 id="name">{{crypto.name}}</h1>
                    <h3 id="payment">Payment method: {{crypto.payment}}</h3>
                    <p id="price"><span>Price: ${{crypto.price}}</span></p>
                    <p id="description">{{crypto.decription}}</p>
                </div>
                <div class="product-btn">
                   {{#if isLogged}}
                   {{#if isOwner}}
                    <div class="author">
                        <a href="/cryptos/{{crypto._id}}/details/edit" class="btn-edit">Edit</a>
                        <a href="/cryptos/{{crypto._id}}/details/delete" class="btn-delete">Delete</a>
                    </div> 
                    {{else}}
                    {{#if isBought}}
                    <p class="buy-message">You already bought these crypto coins.</p>
                    {{else}}
                     <a href="/cryptos/{{crypto._id}}/details" onClick={{buyCrypto}} class="btn-buy">Buy</a> 
                    {{/if}}
                    {{/if}}
                   {{/if}}
                </div>
            </div>
        </section>
    </main>
